<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real-Time Location Tracker</title>
    
    <!-- External Styles -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>
        /* Full-Screen Map */
        #map {
            height: 100vh;
            width: 100%;
            position: absolute;
            top: 0;
            left: 0;
            z-index: 1;
        }
    
        /* Floating Control Panel */
        .control-panel {
            position: fixed; /* Changed to fixed for consistent positioning */
            top: 20px;
            left: 20px;
            z-index: 2;
            background: rgba(20, 30, 50, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            color: white;
            width: clamp(250px, 20vw, 350px); /* Scales between 250px and 350px based on viewport */
            animation: slideIn 0.5s ease-out;
        }
    
        @keyframes slideIn {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(0); }
        }
    
        /* Heading */
        .control-panel h1 {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: clamp(1.2rem, 2vw, 1.5rem); /* Scales with viewport */
            margin-bottom: 1rem;
            color: #ffffff;
            text-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        }
    
        /* User Info Section */
        .user-info, .location-details {
            margin-bottom: 1.5rem;
        }
    
        .user-info p, .location-details p {
            font-size: clamp(0.8rem, 1.5vw, 0.9rem); /* Scales text */
            color: #d1d1d1;
            margin: 0.5rem 0;
        }
    
        .user-info p strong, .location-details p strong {
            color: #60a5fa;
        }
    
        /* Logout Button */
        .logout-btn {
            background: #dc3545;
            border-radius: 8px;
            padding: 10px 20px;
            text-decoration: none;
            color: white;
            font-weight: 600;
            transition: 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            width: 100%;
            text-align: center;
            justify-content: center;
        }
    
        .logout-btn:hover {
            background: #b02a37;
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.3);
        }
    
        /* Camera Button */
        .camera-btn {
            position: fixed; /* Changed to fixed */
            top: 20px;
            right: 20px;
            z-index: 2;
            background: rgba(20, 30, 50, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 50%;
            padding: clamp(12px, 2vw, 15px); /* Scales padding */
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            color: white;
            cursor: pointer;
            transition: 0.3s;
        }
    
        .camera-btn:hover {
            background: rgba(20, 30, 50, 1);
            transform: translateY(-2px);
        }
    
        /* Bottom Sheet for Video Streaming */
        .bottom-sheet {
            position: fixed;
            bottom: -100%;
            left: 0;
            right: 0;
            z-index: 3;
            background: rgba(20, 30, 50, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 12px 12px 0 0;
            padding: 1.5rem;
            box-shadow: 0 -8px 32px rgba(0, 0, 0, 0.3);
            color: white;
            transition: bottom 0.3s ease-out;
            max-height: 50vh; /* Limits height on PCs */
            overflow-y: auto; /* Adds scroll if content overflows */
        }
    
        .bottom-sheet.open {
            bottom: 0;
        }
    
        .bottom-sheet video {
            width: 100%;
            max-width: 600px; /* Prevents video from becoming too large on PCs */
            border-radius: 8px;
            display: block;
            margin: 0 auto;
        }
    
        .bottom-sheet p {
            font-size: clamp(0.8rem, 1.5vw, 0.9rem);
            color: #d1d1d1;
            margin: 0.5rem 0;
            text-align: center;
        }
    
        /* Responsive Design */
        @media (max-width: 768px) {
            .control-panel {
                top: 10px;
                left: 10px;
                padding: 1rem;
                width: clamp(200px, 30vw, 300px);
            }
    
            .camera-btn {
                top: 10px;
                right: 10px;
            }
    
            .bottom-sheet {
                padding: 1rem;
            }
        }
    
        @media (max-width: 576px) {
            .control-panel {
                top: 5px;
                left: 5px;
                padding: 0.8rem;
                width: clamp(180px, 40vw, 250px);
            }
    
            .camera-btn {
                top: 5px;
                right: 5px;
            }
    
            .bottom-sheet {
                padding: 0.8rem;
            }
        }
    
        /* Adjustments for larger screens */
        @media (min-width: 1200px) {
            .control-panel {
                top: 30px;
                left: 30px;
                padding: 2rem;
            }
    
            .camera-btn {
                top: 30px;
                right: 30px;
            }
    
            .bottom-sheet video {
                max-width: 800px; /* Slightly larger video on big screens */
            }
        }
    </style>
</head>
<body>

    <!-- Floating Control Panel -->
    <div class="control-panel">
        <h1>Real-Time Location Tracker</h1>
        
        <!-- User Info Section -->
        <div class="user-info">
            <p><strong>Email:</strong> <span id="user-email"><%= user.email %></span></p>
        </div>

        <!-- Location Details Section -->
        <div class="location-details">
            <p><strong>Latitude:</strong> <span id="latitude">Loading...</span></p>
            <p><strong>Longitude:</strong> <span id="longitude">Loading...</span></p>
        </div>

        <!-- Logout Button -->
        <a href="/logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>

    <!-- Camera Button -->
    <div class="camera-btn" onclick="toggleBottomSheet()">
        <i class="fas fa-video"></i>
    </div>

    <!-- Bottom Sheet for Video Streaming -->
    <div class="bottom-sheet" id="bottomSheet">
        <video id="video" autoplay playsinline></video>
        <p>Stream URL: <span id="streamUrl"></span></p>
    </div>

    <!-- Full-Screen Map -->
    <div id="map"></div>

    <script>
        const userEmail = "<%= user.email %>";
        const token = "<%= token %>";
        const djangoServerURL = "<%= djangoServerURL %>";

        const streamId = `${Date.now()}-${Math.random().toString(36).substr(2, 9)}`;
        const streamUrl = `${window.location.origin}/stream/${streamId}`;
        document.getElementById('streamUrl').textContent = streamUrl;

        // Function to toggle the bottom sheet
        function toggleBottomSheet() {
            const bottomSheet = document.getElementById('bottomSheet');
            bottomSheet.classList.toggle('open');
        }

        // Start the camera stream
        navigator.mediaDevices.getUserMedia({ video: true, audio: false })
            .then(stream => {
                const video = document.getElementById('video');
                video.srcObject = stream;

                const canvas = document.createElement('canvas');
                const ctx = canvas.getContext('2d');

                video.onloadedmetadata = () => {
                    canvas.width = 320;
                    canvas.height = 240;
                    function captureFrame() {
                        ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
                        canvas.toBlob(blob => {
                            fetch(streamUrl, {
                                method: 'POST',
                                body: blob
                            }).catch(err => console.error('Fetch error:', err));
                            requestAnimationFrame(captureFrame);
                        }, 'image/jpeg', 0.5);
                    }
                    requestAnimationFrame(captureFrame);
                };
            })
            .catch(err => {
                console.error('Error accessing camera:', err);
                alert('Could not access camera: ' + err.message);
            });
    </script>

    <!-- External Scripts -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="locationScript.js"></script>
</body>
</html>